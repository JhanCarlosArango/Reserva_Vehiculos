@model Usuarios
@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_Layout_Modifi.cshtml";
}

<body id="login-body">
  
  <div id="login-container" class="card bg-light mt-lg-5 mx-auto text-center" style="max-width: 500px; height: 500px;">
    <h1>Login</h1>
    <main class="form-signin" style="max-width: 400px; margin: 0 auto;">
      <nav class="navbar bg-body-tertiary d-flex justify-content-center">
        <img src="~/images/login.png" alt="Login" width="100" height="100" />
      </nav>

      <form asp-action="Login" asp-controller="User" method="post">
        <div class="form-floating mb-3">
          <input asp-for="usuario" type="text" class="form-control" id="floatingInput" placeholder="Usuario"
            autocomplete="off" required>
          <label for="floatingInput">Usuario</label>
        </div>

        <div class="form-floating mb-3">
          <input asp-for="contrasenia" type="password" class="form-control" id="floatingPassword" placeholder="Password"
            required>
          <label for="floatingPassword">Password</label>
        </div>

        <div class="mb-3">
          <a asp-action="DatosPersonales" asp-controller="DatosPersonales" class="d-block">Registrarse</a>
        </div>

        <button class="w-80 btn btn-lg btn-primary" type="submit">Ingresar</button>
        
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
      </form>
    </main>
  </div>
</body>
