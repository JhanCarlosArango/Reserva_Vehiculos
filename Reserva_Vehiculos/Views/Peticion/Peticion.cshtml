@model Usuarios
@{
    ViewData["Title"] = "peticion";
}
<div style="text-align: left;"> <!-- Contenedor para alinear a la derecha -->
    <a class="btn btn-primary" asp-action="Login" asp-controller="User">
        Login
    </a>
</div>
<form asp-action="peticion" asp-controller="Peticion" method="post">
    <fieldset>
        <legend>Información Inicial</legend>

        <label for="fecha">Fecha:</label>
        <input name="fechaini" type="date" id="fechaini">

        <label for="hora">Hora:</label>
        <input name="hora_ini" id="hora_ini" type="time">
    </fieldset>

    <div style="text-align: right;"> <!-- Contenedor para alinear a la derecha -->
        <input name="id_user" id="id_user" type="hidden" value="@Model.id_user">
            <button type="submit" class="btn btn-primary">
                Continuar
            </button>
    </div>


    <fieldset>
        <legend>Información Final</legend>

        <label for="fecha">Fecha:</label>
        <input type="date" name="fechafin" id="fechafin">

        <label for="hora">Hora:</label>
        <input aname="hora_fin" id="hora_fin" type="time">
    </fieldset>
</form>

<br>

