@model List<Ubicacion>
@{
    ViewData["Title"] = "peticion";
}
@using Reserva_Vehiculos.Models.DAO;
<form asp-action="peticion" asp-controller="Peticion" method="post">
    <nav id="mi-navbar" class="navbar navbar-expand-lg navbar-light bg-ligh">
        <fieldset>
            <legend>
                Nueva Reserva
            </legend>

            <div class="container-fluid">
                <div class="row w-100">
                    <div class="col-md-4">
                        <div class="navbar-brand">
                            <img src="~/images/login.png" alt="Login" width="20" height="20" />
                            <a class="navbar-brand" asp-action="Login" asp-controller="User">Login</a>
                        </div>
                        <div class="navbar-brand">
                            <img src="~/images/icono-carro.png" alt="icono-carro" width="20" height="20" />
                            <a class="navbar-brand" asp-action="MisReservas" asp-controller="ListadoReserva">Mis
                                reservas</a>
                        </div>
                    </div>

                    

                    <div class="col-md-6 d-flex align-items-center justify-content-end">
                        <div class="row">
                            <div class="col-md-10 mb-2">
                                <div class="form-floating">
                                    <select class="form-select" id="ubicacionDropdown" aria-label="Ubicación" required>
                                        <option></option>
                                        @foreach (var item in Model)
                                        {

                                            <option value="@item.id_ubicacion">@item.ubicacion</option>
                                        }
                                    </select>
                                    <label for="ubicacionDropdown">Lugar de Retirada</label>
                                </div>
                            </div>

                            <div class="mb-2">
                                <input type="date" name="fechaini" id="fechaini" class="form-control"
                                    style="width: 80%;" required>
                            </div>
                            <div class="mb-2">
                                <input type="time" name="hora_ini" id="hora_ini" class="form-control"
                                    style="width: 80%;" required>
                            </div>
                        </div>

                        <!-- Segundo bloque -->
                        <div class="row">
                            <div class="col-md-10 mb-2">
                                <div class="form-floating">
                                    <select class="form-select" id="ubicacionDropdown2" aria-label="Ubicación" required>
                                        <option></option>
                                        @foreach (var item in Model)
                                        {

                                            <option value="@item.id_ubicacion">@item.ubicacion</option>
                                        }

                                    </select>
                                    <label for="ubicacionDropdown2">Lugar de Devolucion</label>
                                </div>
                            </div>

                            <br>
                            <div class="mb-2">
                                <input type="date" name="fechafin" id="fechafin" class="form-control"
                                    style=" width: 80%;" required>
                            </div>
                            <div class="mb-2">
                                <input type="time" name="hora_fin" id="hora_fin" class="form-control"
                                    style="width: 80%;" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-end">


                        <button type="submit" class="btn btn-primary">Seguir</button>

                    </div>

                </div>
            </div>
        </fieldset>
    </nav>
</form>
<div class="container-fluid mt-4">
    <h3>Categoría de vehículos</h3>
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Cambia el tamaño del contenedor del carrusel -->
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner bg-secondary">
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i == 0)
                        {
                            <div class="carousel-item active">
                                <img src="~/images/vehiculo1.png" alt="Vehiculo" class="d-block mx-auto" width="700"
                                    height="400" /> <!-- Ajusta el tamaño de la imagen -->
                                <div class="carousel-caption d-none d-md-block text-center mt-3">
                                    <h5>Grupo A - Económico</h5>
                                    <p>Kía Picanto 2024</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="~/images/vehiculo@(i + 1).png" alt="Vehiculo" class="d-block mx-auto" width="700"
                                    height="400" /> <!-- Ajusta el tamaño de la imagen -->
                                <div class="carousel-caption d-none d-md-block text-center mt-3">
                                    <h5>Grupo A - Económico</h5>
                                    <p>Kía Picanto 2024</p>
                                </div>
                            </div>
                        }
                    }

                    <ol class="carousel-indicators">
                        @for (int i = 0; i < 5; i++)
                        {
                            <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i"
                                class="@((i == 0) ? "active" : "")"></li>
                        }
                    </ol>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>


